<div class="card account-form mx-auto">
  <div class="card-body">
    <h2 class="card-tytle text-center mt-3 mb-3">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name) ) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder:"メールアドレスを入力" %>
      </div>

      <div class="mb-5">
        <%= f.label :password, class:"form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"form-control",  placeholder:"パスワードを入力" %>
      </div>

      <div class="d-grid gap-4 mb-4 mt-4">
        <%= f.submit "ログイン", class: "btn btn-warning w-100" %>
        <%= link_to "新しいアカウントを作成", new_registration_path(resource_name), class: "btn bg-secondary-subtle w-100" %>
      </div>
    <% end %>
  </div>
</div>


