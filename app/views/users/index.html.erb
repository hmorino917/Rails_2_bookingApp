<div class="jumbotron jumbotron-extend">
  <div class="container-fluid jumbotron-container pt-5">
    <h1 class="text-light display-1 first-view-title py-5">Potepan Shareで<br>まだ体験したことのない<br>旅をしよう</h1>
    <div class="card input-group p-3 search-container mx-auto w-50">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :area, class:"form-control mb-3", placeholder: "エリア名を入力" %>
        <%= f.submit "検索", class:"btn btn-warning w-100 text-white" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container my-5 recommend-wrapper">
  <p class="fs-1 mb-5 recommend-title">おすすめのエリア</p>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <div class="col">
      <div class="card card-container">
        <%= link_to '/search?area=東京&commit=検索' do %>
          <%= image_tag 'tokyo.jpg', class:"card-img-top img-tokyo", alt:"tokyo" %>
          <div class="card-img-overlay">
            <h5 class="card-title text-light">東京</h5>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col">
      <div class="card card-container">
        <%= link_to '/search?area=大阪&commit=検索' do %>
          <%= image_tag 'osaka.jpg', class:"card-img-top img-osaka", alt:"osaka" %>
          <div class="card-img-overlay">
            <h5 class="card-title text-light">大阪</h5>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col">
      <div class="card card-container">
        <%= link_to '/search?area=京都&commit=検索' do %>
          <%= image_tag 'kyoto.jpg', class:"card-img-top img-kyoto", alt:"kyoto" %>
          <div class="card-img-overlay">
            <h5 class="card-title text-black">京都</h5>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col">
      <div class="card card-container">
        <%= link_to '/search?area=札幌&commit=検索' do %>
          <%= image_tag 'sapporo.jpg', class:"card-img-top img-sapporo", alt:"sapporo" %>
          <div class="card-img-overlay">
            <h5 class="card-title text-black">札幌</h5>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
