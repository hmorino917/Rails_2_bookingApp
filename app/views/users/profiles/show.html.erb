<div class="container-fluid" style="height:600px">
  <div class="row h-100">
    <div class="sidebar border-right col-lg-2 col-md-3 col-sm-3 p-0 mt-5" >
      <p class="d-flex align-items-center m-3 mb-md-3 me-md-auto">
        <span class="fs-4">設定</span>
      </p>
      <hr>
      <ul class="nav nav-pills flex-column mb-5">
        <li class="nav-item">
          <%= link_to "アカウント編集", users_account_path, class:"nav-link link-body-emphasis" %>
        </li>
        <li>
          <%= link_to "プロフィール編集", users_profiles_show_path, class:"nav-link active", aria_current:"page" %>
        </li>
      </ul>
    </div>

    <div class="col">
      <div class="container-fluid">
        <div class="row mt-5 mb-4 justify-content-between">
          <div class="col-5">
            <h2>プロフィール</h2>
          </div>
          <div class="col-3">
            <%= button_to "編集", users_path(current_user.id), method: :get, class: "btn btn-primary text-white" %>
          </div>
        </div>
      </div>
      <hr>

      <table class="table table-borderless mt-5" style="height:300px">
        <tbody>
          <tr>
            <th scope="row" class="col-4">アイコン画像</th>
            <td>
              <% if current_user.profile_image.present? %>
                <%= image_tag current_user.profile_image.url, alt: "プロフィール画像" %>
              <% else %>
                <%= image_tag("default.png") %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th scope="row" class="col-4">名前</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th scope="row" class="col-4">自己紹介</th>
            <td><%= current_user.profile %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

