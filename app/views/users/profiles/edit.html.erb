<div class="card account-form mx-auto bg-body-secondary">
  <div class="card-body">
    <h2 class="card-tytle text-center mt-3 mb-3">プロフィール編集</h2>
    <%= form_with model: @user, url: users_path do |f| %>
    <%= render "devise/shared/error_messages", resource: @user %>
      <div class="mb-3">
        <%= f.label :profile_image, class:"form-label" %> <br>
        <%= f.file_field :profile_image, autofocus: true, class:"form-control", id:"formFile"  %>
      </div>

      <div class="mb-3">
        <%= f.label :name, class:"form-label" %><br>
        <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"名前を入力" %>
      </div>

      <div class="mb-3">
        <%= f.label :profile, class:"form-label" %><br>
        <%= f.text_area :profile, class:"form-control", id:"exampleFormControlTextarea1", rows:"3", placeholder:"自己紹介を入力" %>
      </div>

      <div class="d-grid gap-4 mb-4 mt-4">
        <%= f.submit "保存", class: "btn btn-warning w-100" %>
        <%= link_to "キャンセル", :back, class: "btn bg-primary-subtle w-100" %>
      </div>
    <% end %>
  </div>
</div>


